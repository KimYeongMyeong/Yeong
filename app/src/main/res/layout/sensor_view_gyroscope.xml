<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gyroscopeView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="@drawable/back">

    <android.opengl.GLSurfaceView
        android:id="@+id/gyroscopeShape"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:layout_centerInParent="true" />

    <lecho.lib.hellocharts.view.LineChartView
        android:id="@+id/gyroscopeChart"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/sensor_text_margin"
        android:text="@string/label_gyroscope"
        android:textColor="@color/text"
        android:textSize="@dimen/sensor_text_label_size" />

    <TextView
        android:id="@+id/gyroscopeIntegration"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/sensor_text_margin"
        android:layout_marginStart="@dimen/sensor_text_margin"
        android:text="@string/label_gyroscope_integration_angle"
        android:textStyle="bold"
        android:textColor="@color/text"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/gyroscopeParamTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/sensor_text_margin"
        android:text="@string/label_gyroscope"
        android:textColor="@color/text"
        android:textSize="@dimen/sensor_text_label_size"
        />

</RelativeLayout>
